{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug as sudo",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/os-ids",
      "args": [],
      "stopAtEntry": true,
      "cwd": "${workspaceFolder}",
      "MIMode": "gdb",
      "miDebuggerPath": "${workspaceFolder}/sudo-gdb.sh",
      "setupCommands": [
        {
          "description": "Enable pretty-printing",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}